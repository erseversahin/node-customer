          },
          "name": {
            "type": "string",
            "example": "Şahin ERSEVER"
          },
          "email": {
            "type": "string",
            "example": "ersversahint@gmail.com"
          },
          "role": {
            "type": "string",
            "example": "admin",
            "enum": [
              "user",
              "admin"
            ]
          },
          "password": {
            "type": "string",
            "example": "123456"
          }
        }
      },
      "Account": {
        "type": "object",
        "properties": {
          "accountname": {
            "type": "String",
            "example": "Şahin ERSEVER"
          },
          "user": {
            "type": "ObjectId"
          },
          "currency": {
            "type": "String",
            "example": "TRY",
            "enum": [
              "TRY",
              "USD",
              "EUR"
            ]
          },
          "balance": {
            "type": "Number",
            "example": 1000
          }
        }
      }
