    "paths": {
      "/auth/login": {
        "post": {
          "tags": [
            "auth"
          ],
          "consumes": [
            "application/json"
          ],
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "in": "body",
              "name": {
                "type": "object"
              },
              "description": "Requests are authenticated using the Authorization header and value Bearer: {{token}}. with a valid JWT.",
              "required": true,
              "type": "object",
              "schema": {
                "required": [
                  "email",
                  "password"
                ],
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "ersversahint@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "123456"
                  }
                }
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Will send `Authenticated`"
            },
            "401": {
              "description": "You do not have necessary permissions for the resource"
            }
          }
        }
      },
      "/auth/logout": {
        "get": {
          "tags": [
