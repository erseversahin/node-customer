{
  "swaggerDefinition": {
    "swagger": "2.0",
    "info": {
      "version": "1.0.1",
      "title": "Costumer Accounts - Express restAPI",
      "contact": {
        "email": "info@stebilisim.com"
      }
    },
    "host": "node-customer-server.herokuapp.com",
    "basePath": "/api",
